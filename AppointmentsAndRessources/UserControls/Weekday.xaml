<UserControl x:Class="AppointmentsAndRessources.UserControls.Weekday"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="720">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>


        <TextBlock Text="{Binding Datum}" Grid.Row="0" />
        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="1">
            <ListView ItemsSource="{Binding Termine}" ItemTemplate="{StaticResource TermineTemplate}" IsSynchronizedWithCurrentItem="False"/>
        </ScrollViewer>
        <Button Content="Test" Grid.Row="2"/>


    </Grid>
</UserControl>

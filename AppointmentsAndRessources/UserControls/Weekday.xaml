<UserControl x:Class="AppointmentsAndRessources.UserControls.Weekday"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:res="clr-namespace:AppointmentsAndRessources.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="Auto" Height="725">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <DataTemplate x:Key="TermineDataUCTemplate">
                <res:TerminData Width="Auto"/>
            </DataTemplate>
        </Grid.Resources>


        <TextBlock Text="{Binding Datum}" Grid.Row="0" />
        <ScrollViewer VerticalScrollBarVisibility="Visible" Grid.Row="1">
            <ListView x:Name ="WeekdayListBox" ItemsSource="{Binding Termine}" ItemTemplate="{StaticResource TermineDataUCTemplate}" IsSynchronizedWithCurrentItem="False"/>
        </ScrollViewer>
        <Button Content="Test" Grid.Row="2"/>


    </Grid>
</UserControl>

<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <DataTemplate x:Key="TermineTemplate" x:Name="TTempplate">
        <DataTemplate.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Lucida Sans Typewriter"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
        </DataTemplate.Resources>
        <Border BorderThickness="1" BorderBrush="#FF3424D6" CornerRadius="7" Margin="5,5,5,0">
            <StackPanel Margin="5">
                <TextBlock Text="{Binding ID}"/>
                <TextBlock Text="{Binding PatientenName}"/>
                <TextBlock Text="{Binding Behandler}"/>
                <TextBlock Text="{Binding Termin}" />


            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>